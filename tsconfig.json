{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/assets/*": ["assets/*"],
      "@/routing/*": ["app/routing/*"],
      "@/atom/*": ["components/atom/*"],
      "@/molecul/*": ["components/molecul/*"],
      "@/services/*": ["services/*"],
      "@/hooks/*": ["hooks/*"],
      "@/layout/*": ["components/layout/*"],
      "@/util/*": ["util/*"],
      "@/app/*": ["app/*"],
      "@/api/*": ["services/api/*"],
      "@/pages/*": ["pages/*"],
      "@/types/*": ["types/*"]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
